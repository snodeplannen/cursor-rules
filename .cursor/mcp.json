{
  "mcpServers": {
    "mcp-invoice-processor": {
      "command": "uv",
      "args": ["run", "python", "-m", "src.mcp_invoice_processor.fastmcp_server"],
      "env": {
        "LOG_LEVEL": "DEBUG",
        "DEBUG_MCP": "true",
        "VERBOSE_LOGGING": "true",
        "OLLAMA_TIMEOUT": "30",
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1",
        "MCP_SERVER_NAME": "MCP Invoice Processor"
      }
    }
  }
}
